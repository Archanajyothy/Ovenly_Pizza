<%- include("../partials/adminHeader") -%>
<%- include("../partials/adminSidebar") -%>

        <div class="page-wrapper">
                <!-- Order details Table -->
                <div class="row" style="margin-top: 50px;">
                    <!-- column --> 
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <!-- title -->
                                <div class="d-md-flex">
                                    <div>
                                        <h4 class="card-title">Sales Report</h4>
                                    </div>
                                    <div class="ms-auto">
                                        <div class="dl">
                                            <table id="orders" class="table table-hover table-striped" style="width: 100%;"
                                            style="table-layout: fixed;">
                                                 <tbody>
                                                    <tr>
                                                        <td>
                                                            <a href="/admin/sales-report?id=daily"
                                                                class="btn btn-danger mb-1">Daily</a>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/sales-report?id=monthly"
                                                                class="btn btn-danger mb-1">Monthly</a>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/sales-report?id=yearly"
                                                                class="btn btn-danger mb-1">Yearly</a>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
       
                                        </div>
                                    </div>
                                </div>
                                <!-- title -->
                            </div>
                            <div class="table-responsive">
                                <table id="tb_sales_report" class="table v-middle">
                                    <thead>
                                        <tr class="bg-light">
                                            <th class="border-top-0">Sl No:</th>
                                            <th class="border-top-0">Customer Name:</th>
                                            <th class="border-top-0">Order Id</th>
                                            <th class="border-top-0">Products</th>
                                            <th class="border-top-0">Address</th>
                                            <th class="border-top-0">Email</th>
                                            <th class="border-top-0">Order Date</th>
                                            <th class="border-top-0">Payment Mode</th>
                                            <th class="border-top-0">Amount</th>
                                            
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var cc = 0 %>
                                        <% for (let row of data.orderdata) { %>
                                            <tr>
                                                <td><%= cc=cc+1 %></td>
                                                <td><%= row.username %></td>
                                                <td><%= row.orderId %></td>
                                                <td><%= row.products %></td>
                                                <td><%= row.address %></td>
                                                <td><%= row.email %></td>
                                                <td><%= row.orderDate %></td>
                                                <td><%= row.paymentMode %></td>
                                                <td><%= row.amount %></td>
                                            </tr>
                                          <% } %>
                                          <tr> </tr>
                                          <tr> </tr>

                                          <tr>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td></td>
                                            <td><b> Total Orders :  <%= data.totalOrders %> </b></td>
                                            <td><b> Total Sales :  â‚¹<%= data.totalSale %> </b></td>
                                          </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div style="display: flex; flex-direction: row-reverse;">
                                <button class="btn btn-success" style="color: white; margin-right: 40px; margin-bottom: 20px;" onclick= "downloadExcel('xlsx')" >Download(Excel)</button>
                                <button class="btn btn-success" style="color: white; margin-right: 40px; margin-bottom: 20px;" onclick= "downloadPdf()" >Download(PDF)</button>
                            </div>
                        </div>
                    </div>
                </div> 
                <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
                <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
                <script src="https://cdn.datatables.net/buttons/2.3.2/js/dataTables.buttons.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
                <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
                <script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.html5.min.js"></script>
                <script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.print.min.js"></script>

                <!-- Table -->
            <!-- footer -->
            <footer class="footer text-center">
                All Rights Reserved.
            </footer>
            <!-- End footer -->
        </div>
        </div>
        <!-- All Jquery -->
        <!-- ============================================================== -->
        <script src="assets/libs/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap tether Core JavaScript -->
        <script src="assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="dist/js/app-style-switcher.js"></script>
        <!--Wave Effects -->
        <script src="dist/js/waves.js"></script>
        <!--Menu sidebar -->
        <script src="dist/js/sidebarmenu.js"></script>
        <!--Custom JavaScript -->
        <script src="dist/js/custom.js"></script>
