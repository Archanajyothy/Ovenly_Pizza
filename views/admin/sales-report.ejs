<%- include("../partials/adminHeader") -%>
<%- include("../partials/adminSidebar") -%>

        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->

                <!-- Order details Table -->
                <!-- ============================================================== -->
                <div class="row" style="margin-top: 50px;">
                    <!-- column --> 
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <!-- title -->
                                <div class="d-md-flex">
                                    <div>
                                        <h4 class="card-title">Sales Report</h4>
                                    </div>
                                    <div class="ms-auto">
                                        <div class="dl">
                                            <table id="orders" class="table table-hover table-striped" style="width: 100%;"
                                            style="table-layout: fixed;">
                                                 <tbody>
                                                    <tr>
                                                        <td>
                                                            <a href="/admin/sales-report?id=daily"
                                                                class="btn btn-danger mb-1">Daily</a>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/sales-report?id=weekly"
                                                                class="btn btn-danger mb-1">Weekly</a>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/sales-report?id=monthly"
                                                                class="btn btn-danger mb-1">Monthy</a>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/sales-report?id=yearly"
                                                                class="btn btn-danger mb-1">Yearly</a>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
       
                                        </div>
                                    </div>
                                </div>
                                <!-- title -->
                            </div>
                            <div class="table-responsive">
                                <table id="tb_sales_report" class="table v-middle">
                                    <thead>
                                        <tr class="bg-light">
                                            <th class="border-top-0">Sl No:</th>
                                            <% for (var i = 0; i <= head.length;  i++ ) { %>
                                                <th class="border-top-0"><%= head[i] %></th>
                                            <% }; %>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% var cc = 0 %>
                                        <% for (let row of report) { %>
                                            <tr>
                                                <td><%= cc=cc+1 %></td>
                                                <% for (var i = 0; i < Object.keys(row._id).length;  i++ ) { %>
                                                    <% if(flag == "dly") { %>
                                                        <td><%= Object.values(row._id)[i] %></td>
                                                    <% }else if(flag == "mon") { %>
                                                        <td><%= Object.values(row._id)[i] %></td>
                                                    <% }else if(flag == "wek") { %>
                                                        <td><%= Object.values(row._id)[i] %></td>
                                                    <% } %>
                                                <% } %>
                                                <% if(flag == "yrl") { %>
                                                    <td><%= row._id %></td>
                                                <% } %>
                                              <td><%= row.totalOrders %></td>
                                              <td><%= row.totalSales %></td>
                                            </tr>
                                          <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <div style="display: flex; flex-direction: row-reverse;">
                                <button class="btn btn-success" style="color: white; margin-right: 40px; margin-bottom: 20px;" onclick= "downloadExcel('xlsx')" >Download(Excel)</button>
                                <button class="btn btn-success" style="color: white; margin-right: 40px; margin-bottom: 20px;" onclick= "downloadPdf()" >Download(PDF)</button>
                            </div>
                        </div>
                    </div>
                </div> 
                <!-- ============================================================== -->
                <!-- Table -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Recent comment and chats -->
                <!-- ============================================================== -->
                
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="footer text-center">
                All Rights Reserved.
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Page wrapper  -->
        <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- End Wrapper -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- All Jquery -->
        <!-- ============================================================== -->
        <script src="assets/libs/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap tether Core JavaScript -->
        <script src="assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="dist/js/app-style-switcher.js"></script>
        <!--Wave Effects -->
        <script src="dist/js/waves.js"></script>
        <!--Menu sidebar -->
        <script src="dist/js/sidebarmenu.js"></script>
        <!--Custom JavaScript -->
        <script src="dist/js/custom.js"></script>
        <!--This page JavaScript -->
        <!--chartis chart-->
        <script src="assets/libs/chartist/dist/chartist.min.js"></script>
        <script src="assets/libs/chartist-plugin-tooltips/dist/chartist-plugin-tooltip.min.js"></script>
        <script src="dist/js/pages/dashboards/dashboard1.js"></script>
        <script src="public/assets/js/script.js"></script>

        </body>

