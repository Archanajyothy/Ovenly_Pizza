<%- include("../partials/userDashboardHeader") -%>
    <%- include("../partials/userSidebar") -%>
        <!-- Page wrapper  -->
        <div class="page-wrapper">
            <!-- Container fluid  -->
            <div class="container-fluid">
                <!-- Start Page Content -->
                <!-- Row -->
                <div class="row">
                    <!-- Column -->
                        <!--address card start-->
                        <h3 class="card-title">Billing Address</h3><!-- End .card-title -->
                        <%if(userAddress.length>0){ %>
                        <div class="col-lg-6">
                            <div class="card card-dashboard" style="height: 225px;">
                                <div class="card-body">

                                    <a href="/loadAddAddress"><center style="color: dimgray;" ><h1><i class="mdi mdi-plus-box" ></i></h1><br><h2> Add Address</h2></center></a></p>
                                </div><!-- End .card-body -->
                            </div><!-- End .card-dashboard -->
                        </div><!-- End .col-lg-6 -->
                        <% } %>
                        
                        <%if(userAddress.length>0){
                            for(let key of userAddress){%>
                        <div class="col-lg-6">
                            <div class="card card-dashboard">

                                <div class="card-body">

                                    <p><%= key.firstname %> <%=key.lastname%><br>
                                        <%= key.address %> <br>
                                        <%= key.city %> , <%= key.state %><br>
                                        <%= key.country %><br>
                                        <%= key.zip %><br>
                                        <%= key.phone %><br>
                                       
                                    <a href="/deleteAddress?id=<%= key._id %>"><i class="mdi mdi-close-circle"></i> Remove</a>
                                </p>
                                </div><!-- End .card-body -->
                            </div><!-- End .card-dashboard -->
                        </div><!-- End .col-lg-6 -->
                        <%}}else{%>

                        <div class="col-lg-6">
                            <div class="card card-dashboard">
                                <div class="card-body">

                                    <p><h4> You have not set up this type of address yet.</h4><br>
                                    <a href="/loadAddAddress"><center><h1><i class="mdi mdi-plus-box"></i></h1><br><h2> Add Address</h2></center></a></p>
                                </div><!-- End .card-body -->
                            </div><!-- End .card-dashboard -->
                        </div><!-- End .col-lg-6 -->
                        <%}%>
                        <!--address card end
                    </div>-->
                    <!-- Column -->
                    
                </div>
                <!-- Row -->
                <!-- End PAge Content -->
                <!-- Right sidebar -->
            </div>
            <!-- footer -->
            <footer class="footer text-center">
                All Rights Reserved. 
            </footer>
            <!-- End footer -->
        </div>
        <!-- End Page wrapper  -->
        </div>
        <!-- All Jquery -->
        <script src="assets/libs/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap tether Core JavaScript -->
        <script src="assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="dist/js/app-style-switcher.js"></script>
        <!--Wave Effects -->
        <script src="dist/js/waves.js"></script>
        <!--Menu sidebar -->
        <script src="dist/js/sidebarmenu.js"></script>
        <!--Custom JavaScript -->
        <script src="dist/js/custom.js"></script>
        </body>

        </html>