<%- include("../partials/userDashboardHeader") -%>
    <%- include("../partials/userSidebar") -%>
        <!-- Page wrapper  -->
        <div class="page-wrapper">
            <div class="page-breadcrumb">
                <div class="row align-items-center">
                    <div class="col-5">
                        <h4 class="page-title">Transaction History</h4>

                    </div>

                </div>
            </div>
            <!-- Container fluid  -->
            <div class="container-fluid">
                <!-- Start Page Content -->
                <!-- Row -->
                <div class="row">
                    <section class="container">
                        <table class="table text-light">
                            <thead>
                              <tr>
                                <th scope="col">OrderId</th>
                                <th scope="col">Time</th>
                                <th scope="col">Payment</th>
                                <th scope="col">Status</th>
                                <th scope="col">Actions</th>

                              </tr>
                            </thead>
                            <% for(let key of userOrders){ %>
                            <tbody>
                              <tr class="text-dark">
                                <td><%= key._id %></td>
                                <td><%= key.createdAt.toDateString() %></td>
                                <td><%= key.payment %></td>
                                <td><%= key.status %></td>
                                <% if(key.status != "Delivered" && key.status !== "Cancelled") { %>
                                  <td><a href="/cancel-order?id=<%= key._id %>" class="btn btn-primary ms-2 ">Cancel Order</a></td>
                                <% } else {%>
                                  <td> </td>
                                <% } %>
                                <td><a href="/view-order?id=<%= key._id %>" class="btn btn-primary ms-2 ">View Details</a></td>
                              </tr>
                            </tbody>
                            <% } %>
                          </table>
                    </section>
                    <!-- Column -->

                </div>
                <!-- Row -->
                <!-- End Page Content -->
                <!-- Right sidebar -->
                <!-- .right-sidebar -->
                <!-- End Right sidebar -->
            </div>
            <!-- End Container fluid  -->
            <!-- footer -->
            <footer class="footer text-center">
                All Rights Reserved.
            </footer>
            <!-- End footer -->
        </div>
        <!-- End Page wrapper  -->
        </div>
        <!-- All Jquery -->
        <!-- ============================================================== -->
        <script src="assets/libs/jquery/dist/jquery.min.js"></script>
        <!-- Bootstrap tether Core JavaScript -->
        <script src="assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="dist/js/app-style-switcher.js"></script>
        <!--Wave Effects -->
        <script src="dist/js/waves.js"></script>
        <!--Menu sidebar -->
        <script src="dist/js/sidebarmenu.js"></script>
        <!--Custom JavaScript -->
        <script src="dist/js/custom.js"></script>
        </body>

        </html>